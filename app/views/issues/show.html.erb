<div class="container-fluid">
<div class="col-md-6 col-md-offset-3">
  <h2><%= @issue.title %>
  <div class = "pull-right">
  <%= link_to t("issues.show.edit"), edit_issue_path, id: @issue,
  class: "btn btn-warning", role: "button" %>
  <%= link_to t("issues.show.delete"), @issue, method: :delete,
  class: "btn btn-danger", role: "button", data: {confirm: "Are you sure?"} %>
  </div>
  </h2>
   <%= @issue.description %>
   </div>
</div>
