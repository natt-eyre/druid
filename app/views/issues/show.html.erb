<div class="row">
<div class="col-md-8">
  <h2><%= @issue.title %></h2>
</div>
  <div class="col-md-4">
  <%= link_to t("issues.show.edit"), edit_issue_path, id: @issue,
  class: "btn btn-warning btn-heading", role: "button" %>
  <%= link_to t("issues.show.delete"), @issue, method: :delete,
  class: "btn btn-danger btn-heading", role: "button", data: {confirm: "Are you sure?"} %>
  <% unless @issue.completed? %>
    <%= link_to t("issues.show.donebtn"), issue_completion_path(@issue),
    method: :post, class: "btn btn-success btn-heading", role: "button" %>
  <% else %>
    <%= link_to t("issues.show.reopen"), issue_completion_path(@issue),
    method: :delete, class: "btn btn-info btn-heading", role: "button" %>
  <% end %>
  </div>
  <div class="col-md-12">
    <%= simple_format h(@issue.description) %>
   </div>
</div>
